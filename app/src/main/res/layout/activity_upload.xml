<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="35dp"
                android:layout_height="41dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="5dp"
                android:text="ยืนยันการชำระ"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="184dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="ที่อยู่การจัดส่ง"
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="ชื่อ-นามสกุล"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/user_profile_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="เบอร์โทร"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/user_profile_phone"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="ที่อยู่"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/user_profile_address"
                android:layout_width="200dp"
                android:layout_height="58dp" />

        </LinearLayout>
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="กรุณาอัพโหลดรูปหลักฐานการชำระเงินจะตรวจสอบภายใน48ชั่วโมง" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/border2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:text="อัพโหลดรูปภาพ"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/select_bill_image"
                android:layout_width="125dp"
                android:layout_height="121dp"
                android:layout_gravity="center"
                android:src="@drawable/g9" />



        </LinearLayout>





        <LinearLayout
            android:id="@+id/gotobank"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/border2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="โอนจากธนาคาร"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/bank"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/show"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/o6"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/border2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:text="ยอดการชำระทั้งหมด"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:textColor="#000000"
                android:text="test"
                android:textSize="15dp" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:text="โอนเงินจากบัญชีธนาคารเลขที่ (4หลักสุดท้าย)"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:text="สำหรับการโอนผ่านเคาน์เตอร์ธนาคารโปรดกรอก 9999"/>

        <Button
            android:id="@+id/add_order"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/color"
            android:text="ยืนยัน" />
    </LinearLayout>

</ScrollView>